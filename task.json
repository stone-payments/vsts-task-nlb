{
    "id": "F7778250-B145-494E-A543-A2FFAC818D3A",
    "name": "ManageWindowsNLBCluster",
    "friendlyName": "Windows NLB Cluster Manager",
    "description": "Manages a Windows NLB cluster.",
    "author": "Stone Co.",
    "helpMarkDown": "Manages a Windows NLB cluster.",
    "category": "Utility",
    "visibility": [
        "Build",
        "Release"
    ],
    "runsOn": [
        "Agent",
        "DeploymentGroup"
    ],
    "demands": [],
    "version": {
        "Major": "0",
        "Minor": "1",
        "Patch": "0"
    },
    "minimumAgentVersion": "1.95.0",
    "instanceNameFormat": "Manage NLB Cluster $(ClusterName)",
    "inputs": [{
            "name": "ClusterName",
            "type": "string",
            "label": "Cluster Name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The IP/DNS name of the cluster being managed."
        },
        {
            "name": "Command",
            "type": "pickList",
            "label": "Command",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The command that will be executed.",
            "options": {
                "ListClusterNodes": "List Cluster Nodes",
                "StopClusterNode": "Stop Cluster Node",
                "StartClusterNode": "Start Cluster Node"
            }
        },
        {
            "name": "NodeName",
            "type": "string",
            "label": "Node Name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The IP/DNS name of the node being managed.",
            "visibleRule": "Command = StopClusterNode || Command = StartClusterNode"
        },
        {
            "name": "DrainStop",
            "type": "boolean",
            "label": "Drain stop",
            "defaultValue": 0,
            "required": false,
            "helpMarkDown": "Wait for node to stop.",
            "visibleRule": "Command = StopClusterNode"
        },
        {
            "name": "DrainStopTimeout",
            "int": "string",
            "label": "Drain timeout",
            "defaultValue": 0,
            "required": false,
            "helpMarkDown": "Drain stop timeout in seconds.",
            "visibleRule": "Command = StopClusterNode && DrainStop = true"
        }
    ],
    "execution": {
        "PowerShell3": {
            "target": "ManageNlbCluster.ps1"
        }
    }
}